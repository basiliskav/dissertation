:javascript
  $(function() {
      $('select[name="annotation_type"]').change(function() {
          var obj = $(this);

          if (obj.val() == "text") {
              $('#text-params, #annotation-position, #box-params').show();
          }
          else if (obj.val() == "area") {
              $('#box-params').show();
              $('#annotation-position').hide();
          }
          else if (obj.val() == "point") {
              $('#annotation-position, #box-params').hide();
          }
      });
  });
