<div class="secondaryNav">
  <% if user_signed_in? %>
    <div class="secondaryNav-inner pull-right">
      <span>
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
        |
        <%= link_to 'Edit profile', edit_user_registration_path, method: :get %>
        <% current_user.canceled_account %>
      </span>
    </div>
  <% else %>
    <%= render 'layouts/languages' %>
    <div class="secondaryNav-inner  pull-right">
      <span>
        <%= link_to 'Sign in', user_session_path, method: :get %> or <%= link_to 'Sign up', new_user_registration_path, method: :get %>
      </span>
    </div>
  <% end %>
</div>
