<h1><%= @folder.name %></h1>


<% if @folder.subfolders %>
  <% @folder.subfolders.each do |folder| %>
    <%= link_to folder.name, folder_path(folder) %>
  <% end %>
<% end %>

<%= link_to "Δημιουργια Φακελου", new_folder_path(@folder, :fid => @folder.id), :class => "btn btn-large btn-primary" %>
<%= link_to "Δημιουργια Αρχειου", new_archive_path(@folder, :fid => @folder.id), :class => "btn btn-large btn-primary" %>
