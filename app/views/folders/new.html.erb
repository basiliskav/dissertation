<%= form_for @folder do |f| %>
  <%= f.label :name %><br />
  <%= f.text_field :name %>

  <% if @fid %>
    <%= f.hidden_field :parent_id, value: @fid %>
  <% else %>
    <%= f.hidden_field :parent_id, value: 1 %>
  <% end %>

  <%= f.submit "Submit" %>
  <br>
  <%= link_to "Φάκελοι / Αρχεία", folders_path, method: :get , class: "btn btn-large btn-primary" %>
<% end %>
