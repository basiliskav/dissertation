<% provide(:title, t('change_password')) %>
<h2><%= t('change_password') %></h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>

  <%= render "devise/shared/error_messages" %>

  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, t('new_password') %>
  <%= f.password_field :password, :autofocus => true %></div><br />

  <div><%= f.label :password_confirmation, t('confirm_new_password') %>
  <%= f.password_field :password_confirmation %></div><br />

  <div><%= f.submit t('change_password'), class: "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
