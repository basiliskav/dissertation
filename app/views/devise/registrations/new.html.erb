<% provide(:title, t('sign_up')) %>
<h2><%= t('sign_up') %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <%= render "devise/shared/error_messages" %>

  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %></div><br />

  <div><%= f.label :username %>
  <%= f.text_field :username %></div><br />

  <div><%= f.label :password %>
  <%= f.password_field :password %></div><br />

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div><br />

  <div><%= f.submit t('sign_up'), class: "btn btn-primary" %></div>
<% end %>
<%= render "devise/shared/links" %>
