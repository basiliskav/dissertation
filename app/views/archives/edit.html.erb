<%= form_for @archive, url:folder_archive_path(@archive.folder_id, @archive.id) do |f| %>

  <%= render "error_messages" %>


  <%= f.label :name %> <br />
  <%= f.text_field :name, value: @archive.name %>
  <%= f.label :text %> <br />
  <%= f.text_area :text, value: @archive.text %>
  <br>
  <%= f.submit "Update", class: "btn btn-primary"  %>
  <%= link_to "Φάκελοι / Αρχεία", folders_path, method: :get , class: "btn btn-primary" %>
<% end %>
