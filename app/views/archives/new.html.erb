<%= form_for @archive, url:folder_archives_path do |f| %>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
    <%= f.label :text %><br />
    <%= f.text_area :text %>

    <% if @fid %>
      <%= f.hidden_field :folder_id, value: @fid %>
    <% else %>
      <%= f.hidden_field :folder_id, value: nil %>

    <% end %>

    <%= f.submit "Submit" %>
<% end %>
