
<%= form_for @archive, url:folder_archives_path do |f| %>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
  <%= f.label :text %><br />
  <%= f.text_area :text %>

  <% if @fid %>
    <%= f.hidden_field :folder_id, :value => @fid %>
  <% else %>
    <%= f.hidden_field :folder_id, :value => 1 %>
  <% end %>

  <%= f.submit "Submit" %>
  <br>
  <%= link_to "Φάκελοι / Αρχεία", folders_path, method: :get , class: "btn btn-large btn-primary" %>
<% end %>
