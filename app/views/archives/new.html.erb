
<%= form_for @archive, url:folder_archives_path do |f| %>

  <%= render "error_messages" %>

  <%= f.label :name %><br />
  <%= f.text_field :name %>
  <%= f.label :text %><br />
  <%= f.text_area :text %>

  <% if @fid %>
    <%= f.hidden_field :folder_id, :value => @fid %>
  <% else %>
    <%= f.hidden_field :folder_id, :value => 1 %>
  <% end %>
  <br>
  <%= f.submit "Submit", class: "btn btn-primary"%>
  <%= link_to "Φάκελοι / Αρχεία", folders_path, method: :get , class: "btn btn-primary" %>
  <%= link_to "back", folder_path(Folder.where(id: @fid).take), class: "btn btn-primary" if @fid %>
  <%= link_to "back", folders_path, method: :get, class: "btn btn-primary" if !@fid %>
<% end %>
